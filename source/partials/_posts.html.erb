{block:Posts}
<article class="js-post post post--{PostType}"
         data-tags="{TagsAsClasses}"
         data-type="{PostType}"
         data-permalink="{Permalink}"
         data-shorturl="{ShortURL}"
         id="{PostID}">

  <%#= partial "partials/posts/answer" %>
  <%#= partial "partials/posts/audio" %>
  <%#= partial "partials/posts/chat" %>
  <%#= partial "partials/posts/link" %>
  <%#= partial "partials/posts/panorama" %>
  <%= partial "partials/posts/photo" %>
  <%#= partial "partials/posts/photoset" %>
  <%#= partial "partials/posts/quote" %>
  <%#= partial "partials/posts/text" %>
  <%#= partial "partials/posts/video" %>

  <div class="post__actions">
    <div class="button-list js-buttonlist">
      <div class="multibutton">
        <div class="multibutton__wrap">
          <div class="multibutton__front">
            {LikeButton}
            <a class="button--like js-like" href="javascript:void(0);">
              <i class="button__icon--default"></i>
              <i class="button__icon--hover"></i>
              <i class="button__icon--active"></i>
            </a>
          </div>
          <div class="multibutton__back">
            <a class="button--facebook" href="http://facebook.com/sharer.php?u={Permalink}" target="_blank">
              <i class="button__icon"></i>
            </a>
          </div>
        </div>
      </div>
      <div class="multibutton">
        <div class="multibutton__wrap">
          <div class="multibutton__front">
            {ReblogButton}
            <a class="button--reblog js-reblog" href="javascript:void(0);">
              <i class="button__icon--default"></i>
              <i class="button__icon--hover"></i>
              <i class="button__icon--active"></i>
            </a>
          </div>
          <div class="multibutton__back">
            <a class="button--twitter" href="https://twitter.com/share?url={Permalink}&text=On+Tumblr" target="_blank">
              <i class="button__icon"></i>
            </a>
          </div>
        </div>
      </div>
      <a class="button--share js-share" href="javascript:void(0);">
        <i class="button__icon--default"></i>
        <i class="button__icon--hover"></i>
        <i class="button__icon--active"></i>
        <i class="button--share__icon--close"></i>
        <i class="button--share__icon--closeactive"></i>
      </a>
    </div>
  </div>

</article>
{/block:Posts}
